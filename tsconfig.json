{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}