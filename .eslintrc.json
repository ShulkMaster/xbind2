{
  "root": true,
  "env": {
    "node": true
  },
  "ignorePatterns": ["outdir/**"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "no-console": "off",
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "no-trailing-spaces": "warn",
    "camelcase": "warn",
    "eqeqeq": "warn",
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "@typescript-eslint/no-shadow": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-empty-function": "warn",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "next"
      }
    ],
    "@typescript-eslint/member-delimiter-style": [
      "error",
      {
        "multiline": {
          "delimiter": "semi",
          "requireLast": true
        },
        "singleline": {
          "delimiter": "semi",
          "requireLast": false
        }
      }
    ],
    "@typescript-eslint/ban-types": [
      "error",
      {
        "types": {
          "Symbol": false
        },
        "extendDefaults": true
      }
    ]
  }
}
